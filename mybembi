<body>
  <h1>🌸 Enter Your Secret Passcode</h1>
  <input type="password" id="passcode" placeholder="Shhh..." />
  <button onclick="checkPasscode()">Unlock</button>

  <div id="message">
    <div class="flower">🌼🌷🌸</div>
    <p>You are a gentle miracle in a loud world 🌙</p>
  </div>

  <script>
    const secret = "dreamy";
    function checkPasscode() {
      const entered = document.getElementById("passcode").value.trim();
      if (entered.toLowerCase() === secret) {
        document.getElementById("message").style.display = "block";
      } else {
        alert("Nope! Try again, friend 🐾");
      }
    }
  </script>
